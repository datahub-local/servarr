{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "schedule": [
    "* * * * 6"
  ],
  "automerge": false,
  "prCreation": "immediate",
  "automergeStrategy": "squash",
  "forkProcessing": "enabled",
  "includePaths": [
    "servarr/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "all Helm dependencies",
      "groupSlug": "all",
      "bumpVersions": [
        {
          "filePatterns": [
            "servarr/Chart.{yaml,yml}"
          ],
          "matchStrings": [
            "version:\\s(?<version>[^\\s]+)"
          ],
          "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
        },
        {
          "filePatterns": [
            "servarr/Chart.{yaml,yml}"
          ],
          "matchStrings": [
            "appVersion:\\s(?<version>[^\\s]+)"
          ],
          "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
        }
      ]
    }
  ]
}