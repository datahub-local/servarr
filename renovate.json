{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "schedule": [
    "* * * * 6"
  ],
  "automerge": false,
  "prCreation": "immediate",
  "automergeStrategy": "squash",
  "forkProcessing": "enabled",
  "includePaths": [
    "charts/**"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helmv3"
      ],
      "matchDatasources": [
        "helm",
        "docker"
      ],
      "matchFileNames": [
        "/^charts\\/[^\\/]+\\/Chart\\.(yaml|yml)$/"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "Helm dependencies",
      "groupSlug": "helm",
      "additionalBranchPrefix": "{{parentDir}}-",
      "bumpVersions": [
        {
          "filePatterns": [
            "{{packageFileDir}}/Chart.{yaml,yml}"
          ],
          "matchStrings": [
            "version:\\s(?<version>[^\\s]+)"
          ],
          "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
        }
      ]
    },
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "/^charts\\/[^\\/]+\\/values\\.(yaml|yml)$/"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "Docker dependencies",
      "groupSlug": "docker",
      "additionalBranchPrefix": "{{parentDir}}-",
      "bumpVersions": [
        {
          "filePatterns": [
            "{{packageFileDir}}/Chart.{yaml,yml}"
          ],
          "matchStrings": [
            "version:\\s(?<version>[^\\s]+)"
          ],
          "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
        }
      ]
    }
  ]
}